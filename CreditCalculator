import java.util.Scanner;

public class GPA_Calculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("=== 학점 계산기 ===");

        System.out.print("과목명을 입력하세요: ");
        String subject = scanner.nextLine();

        System.out.print("학점을 입력하세요: ");
        int credit = scanner.nextInt();

        System.out.print("성적(A/B/C/D/F)을 입력하세요: ");
        String grade = scanner.next();

        double gradePoint = convertGradeToPoint(grade);

        System.out.printf("입력한 과목: %s, 학점: %d, 성적: %s, GPA 점수: %.1f\n", subject, credit, grade, gradePoint);
    }

    public static double convertGradeToPoint(String grade) {
        switch (grade.toUpperCase()) {
            case "A": return 4.0;
            case "B": return 3.0;
            case "C": return 2.0;
            case "D": return 1.0;
            case "F": return 0.0;
            default: return -1.0;
        }
    }
}
